# Railway Environment Variables
# Bu dosyayı Railway dashboard'da environment variables olarak ekleyin

# Grafana Admin Ayarları
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=Admin123
GF_SECURITY_SECRET_KEY=MySecretKey12345

# Grafana Server Ayarları - Railway için optimize edilmiş
GF_SERVER_HTTP_PORT=3000
GF_SERVER_ENABLE_GZIP=true
GF_SERVER_SERVE_FROM_SUB_PATH=false
GF_ANALYTICS_REPORTING_ENABLED=false
GF_ANALYTICS_CHECK_FOR_UPDATES=false
GF_LOG_LEVEL=info
GF_SERVER_ROUTER_LOGGING=true

# Database Ayarları
GF_DATABASE_TYPE=sqlite3
GF_DATABASE_PATH=/var/lib/grafana/grafana.db

# Path Ayarları
GF_PATHS_DATA=/var/lib/grafana
GF_PATHS_LOGS=/var/log/grafana
GF_PATHS_PLUGINS=/var/lib/grafana/plugins
GF_PATHS_PROVISIONING=/etc/grafana/provisioning

# Security Ayarları
GF_SESSION_PROVIDER=memory
GF_SESSION_COOKIE_SECURE=true
GF_SESSION_COOKIE_SAMESITE=strict
GF_USERS_ALLOW_SIGN_UP=false
GF_USERS_ALLOW_ORG_CREATE=false
GF_AUTH_ANONYMOUS_ENABLED=false
GF_SECURITY_DISABLE_GRAVATAR=true
GF_SECURITY_COOKIE_SECURE=true
GF_SECURITY_COOKIE_SAMESITE=strict
